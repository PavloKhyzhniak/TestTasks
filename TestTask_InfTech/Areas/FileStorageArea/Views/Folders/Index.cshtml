@model IEnumerable<TestTask_InfTech.DB.Model.Folder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Choice" asp-route-aid="@item.FolderId">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a> |
            </td>
            <td>
                <a asp-action="Edit" asp-route-aid="@item.FolderId">Edit</a> |
                <a asp-action="Details" asp-route-aid="@item.FolderId">Details</a> |
                <a asp-action="Delete" asp-route-aid="@item.FolderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
