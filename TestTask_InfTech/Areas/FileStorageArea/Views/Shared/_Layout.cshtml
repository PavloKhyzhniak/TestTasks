@{
    var currentId = @ViewBag.CurrentFolderElement;
    var currentFileId = @ViewBag.CurrentFileElement;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestTask_InfTech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestTask_InfTech.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestTask_InfTech</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*  <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageAreas" asp-controller="FileStorage" asp-action="Index">Test Task</a>
                        </li>
                        @*  <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="Create">Create Folder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="Delete" asp-route-aid="@currentId">Delete Folder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="Edit" asp-route-aid="@currentId">Rename Folder</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="SingleFileUpload" asp-route-aid="@currentId">Upload File</a>
                        </li>
                        <!-- TODO доработать не сделанные действия, в зависимости от выбранного элемента разблокировать доступные элементы в меню-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="DownloadFile">Download File</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="DeleteFile">Delete File</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="FileStorageArea" asp-controller="Folders" asp-action="EditFile">Rename File</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TestTask_InfTech - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
